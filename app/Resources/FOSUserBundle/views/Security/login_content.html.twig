{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<div class="row">
    <form action="{{ path("fos_user_security_check") }}" method="post" class="col s12">
        {% if csrf_token %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
        {% endif %}

        <div class="input-field col s6">
            <label for="username" class="active">{{ 'security.login.username'|trans }}</label>
            <input type="text" id="username" name="_username" value="{{ last_username }}" required="required"
                   autocomplete="username"/>
        </div>

        <div class="input-field col s6">
            <label for="password" class="active">{{ 'security.login.password'|trans }} </label>
            <input type="password" id="password" name="_password" required="required" autocomplete="current-password"/>
        </div>

        <input type="checkbox" id="remember_me" name="_remember_me" value="on"/>
        <label for="remember_me" class="active">{{ 'security.login.remember_me'|trans }}</label>


        <div class="input-field col s6">
        <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}"/>
        </div>

    </form>
</div>
